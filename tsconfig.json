{
  "compilerOptions": {
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "sourceMap": true,
    "lib": ["ESNext"],
    "target": "es5",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/jestModule.ts"]
}
